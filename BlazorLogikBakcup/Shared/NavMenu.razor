@using MudBlazor

<MudNavMenu>

    <MudButton Href="/"
               Variant="MudBlazor.Variant.Text"
               FullWidth="true"
               Style="color: #373737; justify-content: flex-start; text-transform: none; margin-bottom: 4px;">
        <MudIcon Icon="@Icons.Material.Filled.Home" Style="color: #373737; margin-right: 16px;" />
        Inicio
    </MudButton>

    <AuthorizeView>
        <Authorized>
            <MudButton Href="/Administracion/MenuPostres"
                       Variant="MudBlazor.Variant.Text"
                       FullWidth="true"
                       Style="color: #373737; justify-content: flex-start; text-transform: none; margin-bottom: 4px;">
                <MudIcon Icon="@Icons.Material.Filled.SettingsAccessibility" Style="color: #373737; margin-right: 16px;" />
                Administración KROYA
            </MudButton>
        </Authorized>
    </AuthorizeView>

    <MudButton Href="/MenuPrincipal"
               Variant="MudBlazor.Variant.Text"
               FullWidth="true"
               Style="color: #373737; justify-content: flex-start; text-transform: none; margin-bottom: 4px;">
        <MudIcon Icon="@Icons.Material.Filled.Cake" Style="color: #373737; margin-right: 16px;" />
        Nuestros Postres
    </MudButton>

    <MudButton Href="/Contacto"
               Variant="MudBlazor.Variant.Text"
               FullWidth="true"
               Style="color: #373737; justify-content: flex-start; text-transform: none;">
        <MudIcon Icon="@Icons.Material.Filled.Email" Style="color: #373737; margin-right: 16px;" />
        Contacto
    </MudButton>

</MudNavMenu>