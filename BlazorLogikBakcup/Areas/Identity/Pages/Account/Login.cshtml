@page
@model BlazorProyectoPostres.Areas.Identity.Pages.Account.LoginModel

<form method="post" class="shadow p-4 rounded" style="max-width: 400px; margin: auto;">
    <h4 class="mb-3">Iniciar sesión</h4>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" placeholder="Correo" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Ingresar</button>
</form>
